{
  "name": "tailords",
  "version": "0.1.0",
  "description": "A modern, customizable SCSS framework for building design systems with utility-first approach and component-based architecture.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky",
    "semantic-release": "semantic-release",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "size": "size-limit"
  },
  "lint-staged": {
    "*": "prettier -w --ignore-unknown",
    "*.{js,ts}": "eslint --fix",
    "*.scss": [
      "stylelint --fix --allow-empty-input"
    ]
  },
  "keywords": [
    "typescript",
    "starter",
    "library",
    "template"
  ],
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 kB"
    },
    {
      "path": "dist/index.cjs",
      "limit": "10 kB"
    }
  ],
  "license": "MIT",
  "homepage": "https://github.com/fvena/tailords#readme",
  "repository": {
    "type": "git",
    "url": "git+git@github.com:fvena/tailords.git"
  },
  "bugs": {
    "url": "https://github.com/fvena/tailords/issues"
  },
  "author": "Francisco Vena <fvena32@gmail.com> (https://www.fvena.com)",
  "engines": {
    "node": ">=22.11.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@swc/core": "^1.12.14",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.31.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "personal-style-guide": "^0.6.0",
    "prettier": "^3.6.2",
    "sass": "^1.89.2",
    "sass-true": "^9.0.0",
    "semantic-release": "^24.2.7",
    "size-limit": "^11.2.0",
    "size-limit-preset-node-lib": "^0.4.0",
    "stylelint": "^16.21.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "unplugin-swc": "^1.5.5",
    "vitepress": "^1.6.3",
    "vitest": "^3.2.4"
  }
}
