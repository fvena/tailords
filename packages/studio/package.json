{
  "name": "@tailords/studio",
  "version": "0.1.0",
  "description": "Design System creation and optimization tools - color palette generators, typography scales, and token utilities for TailorDS.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "@tailords/tokens": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "design-system",
    "color-palette",
    "typography",
    "design-tokens",
    "generators",
    "accessibility",
    "tools"
  ],
  "author": "Francisco Vena <fvena32@gmail.com> (https://www.fvena.com)",
  "license": "MIT",
  "homepage": "https://tailords.dev/studio",
  "repository": {
    "type": "git",
    "url": "git+git@github.com:fvena/tailords.git",
    "directory": "packages/studio"
  },
  "bugs": {
    "url": "https://github.com/fvena/tailords/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
