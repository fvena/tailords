{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", "lib/**", ".vitepress/dist/**"]
    },
    "@tailords/tokens#build": {
      "cache": false,
      "outputs": []
    },
    "@tailords/theme#build": {
      "dependsOn": ["@tailords/tokens#build"],
      "cache": false,
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig*.json"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "test/**/*", "src/**/*.test.*", "src/**/*.spec.*"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "test/**/*", "src/**/*.test.*", "src/**/*.spec.*"],
      "outputs": ["coverage/**"]
    },
    "docs:dev": {
      "cache": false,
      "persistent": true
    },
    "docs:build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", "docs/**/*", ".vitepress/**/*"],
      "outputs": [".vitepress/dist/**"]
    },
    "docs:preview": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
